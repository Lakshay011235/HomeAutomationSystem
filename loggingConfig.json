{
    "version": 1,
    "formatters": {
        "simple": {
            "format": "%(levelname)-8s | %(funcName)s [%(lineno)d]\t|| %(message)s"
        },
        "detailed": {
            "format": "%(asctime)s | %(levelname)-10s | %(name)-10s | %(filename)-10s | %(funcName)s [%(lineno)d]\t|| %(message)s"
        }
    },
    "handlers": {
        "file_handler": {
            "class": "logging.FileHandler",
            "filename": "app.log",
            "formatter": "detailed",
            "level": "DEBUG"
        },
        "console_handler": {
            "class": "logging.StreamHandler",
            "formatter": "simple",
            "level": "INFO"
        }
    },
    "loggers": {
        "": {
            "handlers": ["file_handler", "console_handler"],
            "level": "DEBUG"
        }
    }
}