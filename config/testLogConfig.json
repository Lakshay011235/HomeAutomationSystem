{
    "version": 1,
    "formatters": {
        "standard": {
                "format": "%(asctime)s | %(filename)-20s | %(funcName)-30s \t\t %(message)s"
            }
    },
    "handlers": {
        "file_handler": {
            "class": "logging.FileHandler",
            "formatter": "standard",
            "filename": "logs/serverTests.log"
        }
    },
    "root": {
        "level": "DEBUG",
        "handlers": ["file_handler"]
    }
}